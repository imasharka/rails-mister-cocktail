<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
      <div class="card-product-infos">
        <%= link_to cocktail_path(cocktail) do %>
          <h4><%= cocktail.name.upcase %></h4>
          <%= link_to "Delete", cocktail_path(cocktail), method: :delete, data: {confirm: "Are you sure?"} %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>