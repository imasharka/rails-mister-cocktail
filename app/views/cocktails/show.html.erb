<div class="container">
  <div class="card-trip">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo %>')">
      <h1><%= @cocktail.name.upcase %></h1>
    </div>
    <div class="card-trip-infos">
      <div>
        <% @cocktail.doses.each do |d| %>
          <ul class="list-group list-group-flush m-3 p-3">
            <li><%= d.ingredient.name %> x <%= d.description %></li>
            <%= link_to dose_path(d),
      method: :delete,
      data: { confirm: "Are you sure?" } do %><i class="far fa-trash-alt"></i>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
| <%= link_to "Add New Ingredient", new_cocktail_dose_path(@cocktail) %>
| <%= link_to "Back to Cocktail List", cocktails_path %>